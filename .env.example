# Database
DATABASE_URL="postgresql://username:password@localhost:5432/nfl_aggregator?schema=public"

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# External APIs
ESPN_API_URL=https://site.api.espn.com/apis/site/v2/sports/football/nfl
NFL_API_URL=https://www.nfl.com

# Security
JWT_SECRET=your-super-secret-jwt-key-here
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Railway Configuration (for deployment)
RAILWAY_STATIC_URL=
RAILWAY_GIT_COMMIT_SHA=
